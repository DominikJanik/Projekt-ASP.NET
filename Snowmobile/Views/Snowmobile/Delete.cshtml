@model SnowmobileShop.Models.ViewModels.SnowmobileViewModel

<form method="post">
    <div class="row justify-content-center my-2">
        <div class="col-6">
            <input hidden readonly asp-for="Snowmobile.Id" />
            <label asp-for="Snowmobile.Name" class="form-label">Name</label>
            <input readonly asp-for="Snowmobile.Name" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="Snowmobile.Name"></span>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.ListPrice" class="form-label">ListPrice</label>
            <input readonly asp-for="Snowmobile.ListPrice" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="Snowmobile.ListPrice"></span>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.Price" class="form-label">Price</label>
            <input readonly asp-for="Snowmobile.Price" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="Snowmobile.Price"></span>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.Description" class="form-label">Description</label>
            <textarea readonly asp-for="Snowmobile.Description" type="text" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Snowmobile.Description"></span>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.Brand" class="form-label">Brand</label>
            <input readonly asp-for="Snowmobile.Brand" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="Snowmobile.Brand"></span>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.Model" class="form-label">Model</label>
            <input readonly asp-for="Snowmobile.Model" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="Snowmobile.Model"></span>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.Horsepower" class="form-label">Horsepower</label>
            <input readonly asp-for="Snowmobile.Horsepower" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="Snowmobile.Horsepower"></span>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.EngineCapacity" class="form-label">Engine Capacity</label>
            <input readonly asp-for="Snowmobile.EngineCapacity" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="Snowmobile.EngineCapacity"></span>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.YearOfProduction" class="form-label">Year Of Production</label>
            <input readonly asp-for="Snowmobile.YearOfProduction" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="Snowmobile.YearOfProduction"></span>
        </div>
    </div>

    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.Image" class="form-label">Image</label>
            <span class="text-danger" asp-validation-for="Snowmobile.Image"></span>
            <div class="mt-3" id="image">
                @if (Model.Snowmobile.ImageUrl != null)
                {
                    <img src="@Model.Snowmobile.ImageUrl" alt="@Model.Snowmobile.Name image" class="w-100" />
                }
            </div>
        </div>
    </div>

    <div class="row justify-content-center my-2">
        <div class="col-6">
            <label asp-for="Snowmobile.SnowmobileTypeId"></label>
            <select disabled asp-for="Snowmobile.SnowmobileTypeId" asp-items="@Model.SnowmobileTypes" class="form-select">
                <option disabled selected>Select type</option>
            </select>
            <span asp-validation-for="Snowmobile.SnowmobileTypeId" class="text-danger"></span>
        </div>
    </div>

    <div class="row justify-content-center my-2">
        <div class="col-6">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>